<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.gachon.garamgaebi2.viewModel.RegisterViewModel" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    android:paddingStart="6dp"
    android:paddingEnd="6dp"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="372dp"
        android:layout_marginBottom="71dp"
        android:background="@drawable/basic_bottom_sheet_dialog_layout"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="0dp"
        android:textAlignment="center">
        <View
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/drag_handle" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/email_bottom_dialog_1}"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:textAlignment="center"
            android:layout_marginBottom="26dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.email + @string/gc_email}"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textAlignment="center"
            android:layout_marginBottom="26dp"
            />

        <TextView
            android:id="@+id/resend_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_bottom_dialog_2"
            android:textSize="16sp"
            android:textColor="@color/heavy_gray"
            android:textAlignment="center"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingBottom="54dp">

            <include
                android:id="@+id/next_btn"
                layout="@layout/component_btn"
                app:text="@{@string/resend_2}"
                app:on="@{true}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </include>
        </LinearLayout>
        </LinearLayout>

</LinearLayout>
</layout>
