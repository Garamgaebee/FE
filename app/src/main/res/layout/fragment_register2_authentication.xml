<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.gachon.garamgaebi2.viewModel.RegisterViewModel" />
        <variable
            name="code"
            type="String" />
    </data>

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.Register2AuthenticationFragment"
        android:paddingTop="20dp"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_marginHorizontal="38dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register2_1"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:gravity="center_vertical"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:layout_marginBottom="40dp"
            />

        <include
            android:id="@+id/email_textfield"
            layout="@layout/component_textfield"
            app:inputName="@{@string/email}"
            app:inputContent="@={viewModel.email}"
            app:inputValid="@{viewModel.emailIsValid}"
            app:inputError="@{@string/email_error}"
            android:layout_height="118dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="48dp"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginHorizontal="48dp">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_code"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/container_input"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="14dp"
                app:layout_constraintTop_toBottomOf="@id/name"
                android:gravity="center_vertical"
                android:layout_marginBottom="39dp"
                >
                <EditText
                    android:id="@+id/input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@={code}"
                    android:textColor="@color/heavy_gray"
                    android:textSize="18sp"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    style="@style/NoUnderlineEditText"
                    android:layout_marginVertical="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/extra"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="16sp"
                    android:textColor="@color/heavy_gray"
                    android:fontFamily="@font/spoqa_han_sans_neo_light"
                    android:text="@{viewModel.time}"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/border"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/container_input"
                app:layout_constraintBottom_toTopOf="@id/border2"
                />
            <View
                android:id="@+id/border2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/border"
                app:layout_constraintBottom_toTopOf="@id/check_tv"
                />
            <TextView
                android:id="@+id/check_tv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="7dp"
                android:layout_marginHorizontal="17dp"
                android:text="@{viewModel.codeIsValid == true ? null : @string/email_code_error}"
                android:textSize="12sp"
                android:gravity="center"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textColor="@color/red"
                app:layout_constraintTop_toBottomOf="@id/border2"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/resend_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resend"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:textSize="16sp"
            android:textColor="@color/red"
            android:textAlignment="center"
            android:layout_marginTop="39dp"
            />


    </LinearLayout>
</layout>
