<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.gachon.garamgaebi2.viewModel.CommunityProfileViewModel" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/activity_community_profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                android:layout_marginHorizontal="@dimen/toolbar_margin_horizontal"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="0dp">
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_community_profile_toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/community_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_img_1"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="15dp"
                android:src="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/setting_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:src="@drawable/ic_setting"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/profile_img_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/profile_img_1" />
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/join_setting_btn"
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:background="@drawable/activity_community_profile_member_btn"
                android:layout_marginEnd="28dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/profile_img_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/profile_img_1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/main_blue"
                    android:layout_marginStart="16dp"
                    android:text="@string/community_profile_join"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/join_btn"
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:background="@drawable/activity_community_profile_join_btn"
                android:layout_marginEnd="28dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/profile_img_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/profile_img_1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/real_white"
                    android:text="@string/community_profile_join_request"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/community_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="34dp"
                android:maxLines="2"
                android:text="@string/community_profile_name"
                android:textColor="@color/heavy_gray"
                android:textSize="20sp"
                android:textStyle="bold"
                android:onClick="@{()-> viewModel.onClickTypeChange()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_img_1" />

            <TextView
                android:id="@+id/community_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="10dp"
                android:text="@string/community_profile_member_active"
                android:textColor="@color/main_blue"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/community_name" />


            <TextView
                android:id="@+id/community_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="34dp"
                android:ellipsize="end"
                android:maxLength="80"
                android:text="@string/community_profile_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/community_active" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/main_blue"
               app:layout_constraintBottom_toBottomOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.1dp"
            app:layout_constraintTop_toBottomOf="@+id/community_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/community_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/community_profile_notice"
                android:textStyle="bold"
                android:textColor="@color/heavy_gray"
                android:textSize="16sp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="31.5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/community_notice_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/community_profile_notice_num"
                android:textStyle="bold"
                android:textColor="@color/main_blue"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="31.5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/community_notice" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/notice_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next_arrow"
                android:layout_marginEnd="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/community_notice_num"
                app:layout_constraintBottom_toBottomOf="@+id/community_notice_num"/>

            <TextView
                android:id="@+id/community_notice_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/community_profile_notice_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="34dp"
                android:layout_marginTop="21.5dp"
                android:maxLength="120"
                android:ellipsize="end"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/community_notice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/community_notice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:text="@string/thread_day"
                android:textColor="@color/light_gray"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/community_notice_content" />

            <View
                android:id="@+id/line_1"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/main_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.1dp"
            app:layout_constraintTop_toBottomOf="@+id/notice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/community_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/community_profile_link"
                android:textStyle="bold"
                android:textColor="@color/heavy_gray"
                android:textSize="16sp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/community_link_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/community_profile_link_content"
                android:textColor="@color/main_blue"
                android:textColorLink="@color/main_blue"
                android:textSize="13sp"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="34dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:autoLink="web"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/community_link"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/line_2"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/main_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/leader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.1dp"
            android:paddingBottom="41.5dp"
            app:layout_constraintTop_toBottomOf="@+id/link"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/community_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/community_profile_leader"
                android:textStyle="bold"
                android:textColor="@color/heavy_gray"
                android:textSize="16sp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/community_leader_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/community_profile_leader_num"
                android:textStyle="bold"
                android:textColor="@color/main_blue"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/community_leader" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/community_leader_rv"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="20dp"
                tools:listitem="@layout/item_community_profile_leader"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/community_leader"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/community_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/community_profile_member"
                android:textStyle="bold"
                android:textColor="@color/heavy_gray"
                android:textSize="16sp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="31.5dp"
                app:layout_constraintTop_toBottomOf="@+id/community_leader_rv"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/community_member_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/community_profile_member_num"
                android:textStyle="bold"
                android:textColor="@color/main_blue"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="31.5dp"
                app:layout_constraintTop_toBottomOf="@+id/community_leader_rv"
                app:layout_constraintStart_toEndOf="@+id/community_member" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/member_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next_arrow"
                android:layout_marginEnd="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/community_member_num"
                app:layout_constraintBottom_toBottomOf="@+id/community_member_num"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.1dp"
                    android:background="@drawable/activity_community_profile_post_top_border"
                    app:layout_constraintTop_toBottomOf="@+id/leader"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/community_post_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/community_profile_post"
                        android:textStyle="bold"
                        android:textColor="@color/heavy_gray"
                        android:textSize="16sp"
                        android:layout_marginStart="34dp"
                        android:layout_marginTop="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/community_post_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/community_profile_post_num"
                        android:textStyle="bold"
                        android:textColor="@color/main_blue"
                        android:textSize="16sp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginTop="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/community_post_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="24dp"
                        tools:listitem="@layout/item_community_profile_text"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/community_post_1"
                        app:layout_constraintStart_toStartOf="parent"/>



                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>