<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.gachon.garamgaebi2.viewModel.CommunityProfileViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:clickable="true"
        android:focusableInTouchMode="true"
    tools:context=".views.communityProfile.CommunityProfileEditActivity">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="16dp"
            android:src="@drawable/ic_back_arrow"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/back_btn"
            app:layout_constraintTop_toTopOf="@id/back_btn"
            app:layout_constraintBottom_toBottomOf="@id/back_btn"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="@string/community_profile_edit"
            app:layout_constraintEnd_toStartOf="@id/check_iv"
            />
        <ImageView
            android:id="@+id/check_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{viewModel.allInputIsValid == true ? @drawable/ic_check_edit_checked : @drawable/ic_check_edit}"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            android:clickable="@{viewModel.allInputIsValid == true ? true : false}"
            />
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_iv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_tv"
            android:layout_marginTop="29dp"
            />

        <include
            android:id="@+id/name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/component_community_profile_textfield"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_iv"
            app:layout_constraintBottom_toTopOf="@+id/description_input"
            android:layout_marginTop="15dp"
            android:background="@drawable/community_profile_input_container_bottom_border"
            app:inputName="@{@string/community_name}"
            app:inputContent="@={viewModel.name}"
            app:inputValid="@{viewModel.nameIsValid}"
            app:inputError="@{@string/community_name_hint}"
            app:onTextChanged="@{viewModel::onNameTextChanged}"
            android:onClick="@{()-> viewModel.onClickNameInput()}"
            />

        <include
            android:id="@+id/description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/component_community_profile_textfield"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_input"
            app:layout_constraintBottom_toTopOf="@+id/reference_link_input"
            android:layout_marginTop="15dp"
            android:background="@drawable/community_profile_input_container_bottom_border"
            app:inputName="@{@string/community_profile_description}"
            app:inputContent="@={viewModel.description}"
            app:inputValid="@{viewModel.descriptionIsValid}"
            app:inputError="@{@string/community_profile_description_hint}"
            app:onTextChanged="@{viewModel::onDescriptionTextChanged}"
            android:onClick="@{()-> viewModel.onClickDescriptionInput()}"
            />

        <include
            android:id="@+id/reference_link_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/component_community_profile_textfield"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description_input"
            app:inputName="@{@string/reference_link}"
            app:inputContent="@={viewModel.link}"
            app:inputValid="@{viewModel.linkIsValid}"
            app:inputError="@{@string/reference_link_hint}"
            app:onTextChanged="@{viewModel::onLinkTextChanged}"
            android:onClick="@{()-> viewModel.onClickLinkInput()}"
            />



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
