<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/personal_profile_cv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/profile_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/black" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/community_profile_cv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="-1dp"
            app:layout_constraintStart_toStartOf="@id/personal_profile_cv"
            app:layout_constraintTop_toTopOf="@id/personal_profile_cv">

            <ImageView
                android:id="@+id/community_profile_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/light_gray" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="이름은열자이내로작성"
        android:textColor="@color/heavy_gray"
        android:textSize="12sp"
        android:fontFamily="@font/spoqa_han_sans_neo_bold"
        app:layout_constraintStart_toEndOf="@+id/profile_cl"
        app:layout_constraintTop_toTopOf="@+id/profile_cl"
        app:layout_constraintBottom_toTopOf="@id/department_tv"/>

    <TextView
        android:id="@+id/department_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:text="재학또는졸업 학과"
        android:textColor="@color/heavy_gray"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/study_tv"
        app:layout_constraintStart_toStartOf="@+id/nickname_tv"
        app:layout_constraintTop_toBottomOf="@+id/nickname_tv" />

    <TextView
        android:id="@+id/study_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo_medium"
        android:text="스터디이름 스터디"
        android:textColor="@color/heavy_gray"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/nickname_tv"
        app:layout_constraintTop_toBottomOf="@+id/department_tv"
        app:layout_constraintBottom_toBottomOf="@id/profile_cl"/>

    <TextView
        android:id="@+id/member_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo_medium"
        android:text="@string/member"
        android:textColor="@color/light_gray"
        android:textSize="10sp"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/study_tv"
        app:layout_constraintStart_toEndOf="@+id/study_tv"
        app:layout_constraintTop_toTopOf="@id/study_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>