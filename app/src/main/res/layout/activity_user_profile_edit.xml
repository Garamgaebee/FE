<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.gachon.garamgaebi2.viewModel.UserProfileViewModel" />
        <import type="android.view.View"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:clickable="true"
        android:focusableInTouchMode="true"
    tools:context=".views.userProfile.UserProfileEditActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                android:layout_marginHorizontal="@dimen/toolbar_margin_horizontal"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="0dp">

                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:text="@string/my_profile"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/complete_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@android:color/transparent"
                    android:enabled="@{viewModel.allInputIsValid}"
                    android:src="@drawable/activity_top_bar_complete_btn_selector" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_iv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/background_circle_iv"
            android:src="@drawable/background_circle_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appbar_layout"
            android:layout_marginTop="29dp"
            android:scaleType="centerCrop"
            />

        <include
            android:id="@+id/name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/component_community_profile_textfield"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_iv"
            app:layout_constraintBottom_toTopOf="@+id/community_input"
            android:layout_marginTop="15dp"
            android:background="@color/common_google_signin_btn_text_light"
            app:inputName="@{@string/community_name}"
            app:inputContent="@={viewModel.name}"
            app:inputValid="@{viewModel.nameIsValid}"
            app:inputError="@{@string/community_name_hint}"
            app:onTextChanged="@{viewModel::onNameTextChanged}"
            android:onClick="@{()-> viewModel.onClickNameInput()}"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/community_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="32dp"
            android:paddingVertical="20dp"
            android:background="@drawable/activity_community_profile_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_input"
            app:layout_constraintBottom_toTopOf="@id/description_input"
            >
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_profile_community_description"
                android:textSize="16sp"
                android:textColor="@{viewModel.communityInfoIsValid == true ? @color/main_blue : @color/black}"
                android:textAlignment="center"
                android:fontFamily="@font/spoqa_han_sans_neo_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/container_input"
                />
            <LinearLayout
                android:id="@+id/container_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="14dp"
                app:layout_constraintTop_toBottomOf="@id/name"
                android:gravity="center_vertical"
                >
            <TextView
                android:id="@+id/check_tv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="7dp"
                android:layout_marginHorizontal="17dp"
                android:text="@string/user_profile_no_community"
                android:textSize="15sp"
                android:fontFamily="@font/spoqa_han_sans_neo_bold"
                android:textColor="@color/light_gray"
                android:gravity="center"
                android:visibility="@{viewModel.communityInfoIsValid == true ? View.GONE : View.VISIBLE}"
                app:layout_constraintTop_toBottomOf="@id/border2"
                />
            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
        <include
            android:id="@+id/description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/component_community_profile_textfield"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_input"
            app:layout_constraintBottom_toTopOf="@+id/major_input"
            android:layout_marginTop="15dp"
            android:background="@drawable/community_profile_input_container_bottom_border"
            app:inputName="@{@string/user_profile_description}"
            app:inputContent="@={viewModel.description}"
            app:inputValid="@{viewModel.descriptionIsValid}"
            app:inputError="@{@string/user_profile_description_hint}"
            app:onTextChanged="@{viewModel::onDescriptionTextChanged}"
            android:onClick="@{()-> viewModel.onClickDescriptionInput()}"
            />

        <include
            android:id="@+id/major_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/component_community_profile_textfield"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description_input"
            app:inputName="@{@string/major}"
            app:inputContent="@={viewModel.major}"
            app:inputValid="@{viewModel.majorIsValid}"
            app:inputError="@{``}"
            app:onTextChanged="@{viewModel::onMajorTextChanged}"
            android:onClick="@{()-> viewModel.onClickMajorInput()}"
            />



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
