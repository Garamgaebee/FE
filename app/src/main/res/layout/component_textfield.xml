<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" />
        <variable
            name="inputName"
            type="String" />
        <variable
            name="inputContent"
            type="String" />
        <variable
            name="sideText"
            type="String" />
        <variable
            name="inputValid"
            type="Boolean" />
        <variable
            name="inputError"
            type="String" />
        <variable
            name="search"
            type="Boolean" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/editText_margin_horizontal">
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{inputName}"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="@font/spoqa_han_sans_neo_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/container_input"
        />
    <LinearLayout
        android:id="@+id/container_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="14dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:gravity="center_vertical"
        >
        <EditText
            android:id="@+id/input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@={inputContent}"
            android:textColor="@color/heavy_gray"
            android:textSize="18sp"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:gravity="center_vertical"
            android:inputType="text"
            android:minHeight="21dp"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:ellipsize="end"
            style="@style/NoUnderlineEditText"
            android:layout_marginVertical="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/extra"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/extra"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/heavy_gray"
            android:fontFamily="@font/spoqa_han_sans_neo_light"
            android:text='@{(sideText == null || sideText == "search") ? null : sideText}'
            android:visibility='@{(sideText == null || sideText == "search") ? View.GONE : View.VISIBLE}'
            app:layout_constraintStart_toEndOf="@id/input"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_vertical"
            android:layout_marginEnd="24dp"
            />
        <ImageView
            android:id="@+id/side_icon"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:src='@{sideText == null ? @drawable/pw_cancel : sideText == "search" ? @drawable/search : null}'
            android:visibility='gone'
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/input"
            app:layout_constraintBottom_toBottomOf="@id/input"

            />

    </LinearLayout>
    <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/container_input"
        app:layout_constraintBottom_toTopOf="@id/border2"
        />
    <View
        android:id="@+id/border2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/border"
        app:layout_constraintBottom_toTopOf="@id/check_tv"
        />
    <TextView
        android:id="@+id/check_tv"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="7dp"
        android:layout_marginHorizontal="17dp"
        android:text="@{inputError}"
        android:textSize="12sp"
        android:fontFamily="@font/spoqa_han_sans_neo_medium"
        android:textColor="@color/red"
        android:gravity="center_vertical"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/border2"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>