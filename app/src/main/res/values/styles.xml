<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/styles.xml -->
<resources>

    <style name="NoUnderlineEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <!-- 아래 속성은 필요에 따라 수정할 수 있습니다 -->
        <item name="android:inputType">text</item>
        <item name="android:gravity">top|start</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/spoqaHasNeo-Bold</item>
    </style>

    <style name="ProgressBarNoPaddingGray" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:padding">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:progressDrawable">@color/thin_gray</item> <!-- 테두리 제거 -->
        <item name="android:progressBackgroundTint">@color/thin_gray</item>
        <item name="android:progressTint">@color/thin_gray</item>
    </style>

</resources>
