<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/styles.xml -->
<resources>

    <style name="NoUnderlineEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/default_font</item>
    </style>

    <style name="ProgressBarNoPaddingGray" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:padding">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:progressDrawable">@color/thin_gray</item> <!-- 테두리 제거 -->
        <item name="android:progressBackgroundTint">@color/thin_gray</item>
        <item name="android:progressTint">@color/main_blue</item>
    </style>
    <!-- Custom font 적용 -->
    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/default_font</item>
    </style>

    <style name="customButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/default_font</item>
    </style>

    <style name="customEditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/default_font</item>
    </style>

    <style name="customRadioButtonFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/default_font</item>
    </style>

    <style name="customCheckboxFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/default_font</item>
    </style>

    <!-- tabLayout 텍스트 커스텀 -->
    <style name="tab_selected_text_style">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_bold</item>
    </style>
    <style name="tab_text_style">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_medium</item>
    </style>
    <!-- tabLayout 커스텀-->
    <style name="tab_style">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextAppearance">@style/tab_text_style</item>
        <item name="tabSelectedTextAppearance">@style/tab_selected_text_style</item>
        <item name="tabTextColor">@color/light_gray</item>
        <item name="tabSelectedTextColor">@color/main_blue</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="background">@drawable/fragment_main_feed_tab_border</item>
    </style>>
</resources>
